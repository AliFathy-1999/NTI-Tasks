{{>header}}
{{>navbar}}
<section class="container my-4">
    <h3 class="text-center">{{pageTitle}}</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#if isEmpty}}
            <tr class="alert alert-danger">
                <td colspan="2" class="alert alert-danger text-center">No users yet</td>
            </tr>
            {{else}}
            {{#each tasks}}
            <tr>
               <td> {{this.title}}</td>
                <td>
                    <a href="/single/{{this._id}}" class="btn btn-primary mx-2">Show</a>
                    <a href="/edit/{{this._id}}" class="btn btn-warning mx-2">edit</a>
                    <a href="/del/{{this._id}}" class="btn btn-danger mx-2">delete</a>
                </td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}